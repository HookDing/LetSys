
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>华鼎房屋租赁系统</title>
    <meta name="author" content="DeathGhost" />
    <link rel="stylesheet" type="text/css" href="/Content/CSS/style.css" />
    <style>
        body {
            height: 100%;
            background: #16a085;
            overflow: hidden;
        }

        canvas {
            z-index: -1;
            position: absolute;
        }
    </style>
    <script src="/Content/js/jquery.js"></script>
    <script src="/Content/js/verificationNumbers.js"></script>
    <script src="/Content/js/Particleground.js"></script>
    <script>
        $(document).ready(function () {
            //粒子背景特效
            $('body').particleground({
                dotColor: '#5cbdaa',
                lineColor: '#5cbdaa'
            });
        });
    </script>
</head>
<body>
    <form action="/Home/DoLogin" method="post">
        <dl class="admin_login">
            <dt>
                <strong>华鼎房屋租赁系统</strong>
                <em></em>
            </dt>
            <dd class="user_icon">
                <input type="text" placeholder="账号" class="login_txtbx" name="name" />
            </dd>
            <dd class="pwd_icon">
                <input type="password" placeholder="密码" class="login_txtbx" name="pwd" />
            </dd>

            <dd>
                <input type="submit" value="立即登陆" class="submit_btn" />
            </dd>
            <dd>
                <p>© 2020-2022 华鼎IT 版权所有</p>
            </dd>
        </dl>
    </form>
</body>
</html>

